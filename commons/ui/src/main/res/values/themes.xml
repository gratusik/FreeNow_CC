<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FreeNow_CC" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    custom theme light theme for the  application-->
    <style name="Theme.FreeNow_CC.Default" parent="Theme.FreeNow_CC">
        <item name="rating">@color/rating</item>
        <item name="black">@color/black</item>
        <item name="white">@color/white</item>
        <item name="primary_text">@color/primary_text</item>
        <item name="secondary_text">@color/secondary_text</item>
        <item name="third_text">@color/third_text</item>
        <item name="card_background">@color/card_background</item>
        <item name="app_background">@color/app_background</item>
        <item name="shadow">@color/secondary_text</item>
        <item name="button_background">@color/button_background</item>
        <item name="view_background">@color/view_background</item>
        <item name="primary_color">@color/colorPrimary</item>
        <item name="primary_color_variant">@color/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>-->
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginLeft">@dimen/margin_50dp</item>
        <item name="android:layout_marginRight">@dimen/margin_50dp</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
    </style>

    <style name="CredentialEditText" parent="Widget.AppCompat.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RatingText" parent="Theme.AppCompat">
        <item name="android:textColor">?attr/white</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CapacityText" parent="Theme.AppCompat">
        <item name="android:textColor">?attr/primary_text</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RegularText" parent="Theme.AppCompat">
        <item name="android:textColor">?attr/primary_text</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubHeaderTextBlack" parent="Theme.AppCompat">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?attr/primary_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>