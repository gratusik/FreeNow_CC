<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/parent_home_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <include
            android:id="@+id/map_view_inc"
            layout="@layout/item_map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_where" />

        <include
            android:id="@+id/bottom_where"
            layout="@layout/item_bottom_where_to"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_100dp"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</layout>